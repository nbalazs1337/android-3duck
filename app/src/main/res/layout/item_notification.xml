<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/et_background"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_title_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="BathRoom tap repair"
        android:textColor="@color/app_green"
        android:layout_toRightOf="@id/iv_notification"
        android:textSize="15sp"></TextView>

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="48dp"
        android:layout_marginLeft="10dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_img"
        android:scaleType="centerCrop"
        android:src="@drawable/logopng"></ImageView>

    <TextView
        android:id="@+id/txt_name_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="New Notification"
        android:layout_toRightOf="@id/iv_notification"
        android:layout_below="@+id/txt_title_notification"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"/>

        <ImageView
            android:id="@+id/icon_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="129dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/txt_name_notification"
            android:src="@drawable/ic_delete_green"></ImageView>
    </RelativeLayout>
</RelativeLayout>

