<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <TextView
        android:id="@+id/txt_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a job"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"></TextView>

    <EditText
        android:id="@+id/et_service"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/et_background"
        android:drawableLeft="@drawable/ic_service"
        android:drawablePadding="10dp"
        android:layout_marginTop="40dp"
        android:hint="Service"
        android:paddingHorizontal="30dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_add"></EditText>


    <EditText
        android:id="@+id/et_price"
        android:layout_width="165dp"
        android:layout_height="49dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/et_background"
        android:drawableLeft="@drawable/ic_money"
        android:drawablePadding="10dp"
        android:hint="Price"
        android:paddingHorizontal="30dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_service"></EditText>

    <EditText
        android:id="@+id/et_city"
        android:layout_width="165dp"
        android:layout_height="49dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/et_background"
        android:drawableLeft="@drawable/ic_city"
        android:drawablePadding="10dp"
        android:hint="City"
        android:paddingHorizontal="30dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_service"></EditText>

    <EditText
        android:id="@+id/et_description"
        android:layout_width="360dp"
        android:layout_height="103dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/et_background"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:minLines="0"
        android:paddingHorizontal="30dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_city"></EditText>





</androidx.constraintlayout.widget.ConstraintLayout>
